generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id              String   @id @default(uuid())
  guestFName       String
  guestLName       String
  guestDesignation String
  guestCompanions Int
  guestContact    String
  driver          Boolean
  email           String?
  foodPreferences FoodType[]
  addDescription  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(updatedAt())
  updatedBy       DateTime @default(updatedBy())
}

enum FoodType {
  JAIN
  NON_JAIN
}
