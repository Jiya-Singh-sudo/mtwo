<!DOCTYPE html>
<html>
<head>
  <style>
    body { font-family: Arial, sans-serif; font-size: 12px; }
    h2 { text-align: center; }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 12px;
    }
    th, td {
      border: 1px solid #333;
      padding: 6px;
      text-align: left;
    }
    th {
      background: #f2f2f2;
    }
  </style>
</head>
<body>

<h2>{{meta.title}}</h2>
<p>
  Location: {{meta.location}} <br />
  Period: {{meta.fromDate}} to {{meta.toDate}} <br />
  Report ID: {{meta.reportId}}
</p>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Driver</th>
      <th>Shift</th>
      <th>In</th>
      <th>Out</th>
      <th>Week Off</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <td>{{duty_date}}</td>
      <td>{{driver_name}}</td>
      <td>{{shift}}</td>
      <td>{{duty_in_time}}</td>
      <td>{{duty_out_time}}</td>
      <td>{{#if is_week_off}}Yes{{else}}No{{/if}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

</body>
</html>
