      <td>{{ddmmyyyy plan_date}}</td>
      <td>{{guest_name}}</td>
      <td>{{room_id}}</td>
      <td>{{butler_name}}</td>
      <td>{{food_name}}</td>
      <td>{{meal_type}}</td>
